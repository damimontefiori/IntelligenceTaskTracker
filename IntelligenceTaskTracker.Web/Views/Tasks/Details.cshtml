@model IntelligenceTaskTracker.Web.Models.TaskItem
@{
    ViewData["Title"] = "Detalle de Tarea";
}
<h2>@Model.Title</h2>
<p class="text-muted">Creada: @Model.CreatedAt.ToLocalTime().ToString("g")</p>
<dl class="row">
    <dt class="col-sm-2">Responsable</dt>
    <dd class="col-sm-10">@(Model.ResponsibleUser?.Name ?? "—")</dd>

    <dt class="col-sm-2">Estado</dt>
    <dd class="col-sm-10">@Model.Status</dd>

    <dt class="col-sm-2">Fecha Límite</dt>
    <dd class="col-sm-10">@(Model.DueDate?.ToLocalTime().ToString("d") ?? "—")</dd>

    <dt class="col-sm-2">Descripción</dt>
    <dd class="col-sm-10">@Model.Description</dd>
</dl>

<!-- Panel de Insights IA -->
<div class="row mt-4">
  <div class="col-12">
    <partial name="_TaskInsightPartial" model="Model.Id" />
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-7">
    <h4>Comentarios</h4>
    @if (Model.Comments == null || !Model.Comments.Any())
    {
        <div class="text-muted">Sin comentarios</div>
    }
    else
    {
        <ul class="list-group">
        @foreach (var c in Model.Comments)
        {
            <li class="list-group-item">
                <div class="small text-muted">@c.CreatedAt.ToLocalTime().ToString("g") — @c.CreatedBy</div>
                <div>@c.Comment</div>
            </li>
        }
        </ul>
    }
  </div>
  <div class="col-md-5">
    <h4>Agregar comentario</h4>
    <form asp-action="AddComment" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label for="createdBy" class="form-label">Tu nombre</label>
            <input type="text" class="form-control" id="createdBy" name="createdBy" value="@Model.ResponsibleUser?.Name" />
        </div>
        <div class="mb-3">
            <label for="comment" class="form-label">Comentario</label>
            <textarea class="form-control" id="comment" name="comment" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Publicar</button>
    </form>
  </div>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" asp-route-returnUrl="@ViewBag.ReturnUrl" class="btn btn-secondary mt-3">Editar</a>
<a href="@(ViewBag.ReturnUrl ?? Url.Action("Index", "Tasks"))" class="btn btn-link mt-3">Volver</a>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
