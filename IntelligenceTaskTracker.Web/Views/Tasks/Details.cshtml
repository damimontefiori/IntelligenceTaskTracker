@model IntelligenceTaskTracker.Web.Models.TaskItem
@{
    ViewData["Title"] = "Detalle de Tarea";
}
<h2>@Model.Title</h2>
<p class="text-muted">Creada: @Model.CreatedAt.ToLocalTime().ToString("g")</p>
<dl class="row">
    <dt class="col-sm-2">Responsable</dt>
    <dd class="col-sm-10">@(Model.ResponsibleUser?.Name ?? "—")</dd>

    <dt class="col-sm-2">Estado</dt>
    <dd class="col-sm-10">@Model.Status</dd>

    <dt class="col-sm-2">Fecha Límite</dt>
    <dd class="col-sm-10">@(Model.DueDate?.ToLocalTime().ToString("d") ?? "—")</dd>

    <dt class="col-sm-2">Descripción</dt>
    <dd class="col-sm-10">@Model.Description</dd>
</dl>
<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Editar</a>
<a asp-action="Index" class="btn btn-link">Volver</a>
